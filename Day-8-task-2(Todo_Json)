## Day-8 task-2 todo list manager
import json
import os
FILE="todo.json"
def load_tasks():
    try:
        with open(FILE,"r") as f:
            return json.load(f)
    except:
        return[]
def save_tasks(tasks):
    with open(FILE,"w") as f:
        json.dump(tasks,f,indent=4)
def add_tasks():
    task=input("Enter your task: ")
    tasks=load_tasks()
    tasks.append({"task": task,"status":"Pending"})
    save_tasks(tasks)
    print("Tasks saved")
def view_tasks():
    tasks=load_tasks()
    if not tasks:
        print("No tasks saved yet")
        return
    print("\n ---Your Tasks----")
    for i,t in enumerate(tasks):
        print(f"{i+1}.{t['task']} {t['status']}")
def mark_completed():
    tasks=load_tasks()
    view_tasks()
    if not tasks:
        print("No tasks saved yet")
        return
    num = int(input("Enter your task number to mark completed: "))
    tasks[num - 1]["status"] = "completed"
    save_tasks(tasks)
    print("Tasks successfully marked completed")
def delete_task():
    tasks=load_tasks()
    view_tasks()
    if not tasks:
        print("No task available to delete")
        return
    num=int(input("Enter your task number to delete: "))
    tasks.pop(num-1)
    save_tasks(tasks)
    print("Tasks successfully deleted")
while True:
    print("\n1.Add Tasks \n2.View tasks \n3.Mark tasks \n4.Delete Tasks \n5.Exit")
    choice= input("Enter your choice: ")
    if choice=="1":
        add_tasks()
    elif choice=="2":
        view_tasks()
    elif choice=="3":
        mark_completed()
    elif choice=="4":
        delete_task()
    elif choice=="5":
        break
    else:
        print("Invalid choice!")
