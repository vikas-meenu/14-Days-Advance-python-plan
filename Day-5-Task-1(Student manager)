## Task-1 Student report manager(Json +file handling)
import json
import os
def load_data():
    if not os.path.exists("students_data.json"):
        return {"students":[]}
    try:
        with open("students_data.json","r") as file:
            return json.load(file)
    except json.JSONDecodeError:
        return {"students":[]}
def save_data(data):
    with open("students_data.json","w") as file:
        json.dump(data,file,indent=4)
def add_student():
    name=input("Enter student name: ")
    marks=[]
    for i in range(3):
        mark=float(input(f"Enter marks of subjects {i+1}: "))
        marks.append(mark)
        avg=sum(marks)/3
        data=load_data()
        data['students'].append({
            "name":name,
            "marks":marks,
            "average": avg
        })
        save_data(data)
        print(f"Student  {name} saved successfullyâœ” ")
def show_report():
    data=load_data()
    student=data['students']
    if not student:
        return
    all_marks=[]
    for s in student:
        all_marks.extend(s['marks'])
        print("\n ðŸ“Š Student Report")
        print("Name",s['name'])
        print("Highest marks",max(all_marks))
        print("Lowest marks",min(all_marks))
        print("Average marks",round(sum(all_marks)/len(all_marks)),2)
while True:
    print("\n 1.Add student")
    print("\n 2.Show report")
    print("\n 3.Exit")
    choice=int(input("Enter your choice: "))
    if choice==1:
        add_student()
    elif choice==2:
        show_report()
    elif choice==3:
        print("Exiting report")
    else:
        print("Invalid choice try again!")




